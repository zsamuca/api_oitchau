(Matricula as text) as nullable text =>
let
    Host = "https://api.oitchau.com.br",
    Token = Token_Oitchau,

    Response =
        Json.Document(
            Web.Contents(
                Host,
                [
                    RelativePath = "v2/public/integrations_api/employees/find",
                    Query = [ matricula = Matricula ],
                    Headers = [
                        Authorization = "Bearer " & Token,
                        Accept = "application/json"
                    ]
                ]
            )
        ),

    Conteudo = try Response[content] otherwise null,
    Uuid = try Text.From(Conteudo[uuid]) otherwise null
in
    Uuid
