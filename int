(EmployeeUuid as text, DataConsulta as date) =>
let
    Host = "https://api.oitchau.com.br",
    Token = Token_Oitchau,

    Response =
        Json.Document(
            Web.Contents(
                Host,
                [
                    RelativePath = "v2/public/integrations_api/employees/hoursbank/totals",
                    Query = [
                        employeeUuid = EmployeeUuid,
                        date = Date.ToText(DataConsulta, "yyyy-MM-dd")
                    ],
                    Headers = [
                        Authorization = "Bearer " & Token,
                        Accept = "application/json"
                    ]
                ]
            )
        ),

    // O "totals" vem como Record com chaves (GUIDs) -> valores (Records)
    TotalsRecord = Response[totals],
    TotalsTable = Record.ToTable(TotalsRecord),                 // colunas: Name, Value
    Expanded = Table.ExpandRecordColumn(
        TotalsTable,
        "Value",
        {"negative", "positive"},
        {"negative", "positive"},
        MissingField.UseNull
    ),

    Neg = List.Sum(List.RemoveNulls(Expanded[negative])),
    Pos = List.Sum(List.RemoveNulls(Expanded[positive])),

    SaldoMinutos = Neg + Pos
in
    SaldoMinutos
