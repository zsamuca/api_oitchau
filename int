(EmployeeUuid as text, DataConsulta as date) =>
let
    Host = "https://api.oitchau.com.br",
    Token = Token_Oitchau,

    Response =
        Json.Document(
            Web.Contents(
                Host,
                [
                    RelativePath = "v2/public/integrations_api/employees/hoursbank/totals",
                    Query = [
                        employeeUuid = EmployeeUuid,
                        date = Date.ToText(DataConsulta, "yyyy-MM-dd")
                    ],
                    Headers = [
                        Authorization = "Bearer " & Token,
                        Accept = "application/json"
                    ]
                ]
            )
        ),

    TotalsRecord = Response[totals],

    // TotalsRecord é um Record com várias chaves (GUIDs), cada uma com um Record dentro.
    ValuesList = Record.FieldValues(TotalsRecord),

    // Soma "negative" e "positive" de cada Record interno (se existir)
    SumNeg = List.Sum(
        List.Transform(
            ValuesList,
            each try Number.From(Record.Field(_, "negative")) otherwise 0
        )
    ),
    SumPos = List.Sum(
        List.Transform(
            ValuesList,
            each try Number.From(Record.Field(_, "positive")) otherwise 0
        )
    ),

    SaldoMinutos = SumNeg + SumPos
in
    SaldoMinutos
