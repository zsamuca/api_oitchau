(EmployeeUuid as text, DataConsulta as date) =>
let
    Host = "https://api.oitchau.com.br",
    Token = Token_Oitchau,

    Response =
        Json.Document(
            Web.Contents(
                Host,
                [
                    RelativePath = "v2/public/integrations_api/employees/hoursbank/totals",
                    Query = [
                        employeeUuid = EmployeeUuid,
                        date = Date.ToText(DataConsulta, "yyyy-MM-dd")
                    ],
                    Headers = [
                        Authorization = "Bearer " & Token,
                        Accept = "application/json"
                    ]
                ]
            )
        ),

    Totals = Response[totals],
    Carteiras = Record.FieldValues(Totals),

    // Converte qualquer coisa em número (se der)
    ToNumber = (x as any) as number =>
        let
            n = try Number.From(x) otherwise null
        in
            if n = null then 0 else n,

    // Soma uma "carteira" que pode ser:
    // - número (ex.: -121)
    // - record (ex.: [negative=0, positive=6] ou outros campos)
    // - null
    SomaCarteira = (c as any) as number =>
        if c = null then
            0
        else if Value.Is(c, type number) then
            c
        else if Value.Is(c, type record) then
            List.Sum(List.Transform(Record.FieldValues(c), each ToNumber(_)))
        else
            // Se vier texto ou outro tipo, tenta converter, senão 0
            ToNumber(c),

    SaldoMinutos = List.Sum(List.Transform(Carteiras, each SomaCarteira(_)))
in
    SaldoMinutos
