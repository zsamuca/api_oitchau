(EmployeeUuid as text, DataConsulta as date) =>
let
    Host = "https://api.oitchau.com.br",
    Token = Token_Oitchau,

    Response =
        Json.Document(
            Web.Contents(
                Host,
                [
                    RelativePath = "v2/public/integrations_api/employees/hoursbank/totals",
                    Query = [
                        employeeUuid = EmployeeUuid,
                        date = Date.ToText(DataConsulta, "yyyy-MM-dd")
                    ],
                    Headers = [
                        Authorization = "Bearer " & Token,
                        Accept = "application/json"
                    ]
                ]
            )
        ),

    TotalsRecord = Response[totals],

    // Pega todas as carteiras
    Carteiras = Record.FieldValues(TotalsRecord),

    // Para cada carteira, pega todos os campos internos
    ExtrairNumeros = (r as record) as number =>
        let
            Valores = Record.FieldValues(r),
            Numeros = List.Transform(Valores, each try Number.From(_) otherwise 0),
            Soma = List.Sum(Numeros)
        in
            Soma,

    ListaSaldos = List.Transform(Carteiras, each ExtrairNumeros(_)),

    SaldoMinutos = List.Sum(ListaSaldos)
in
    SaldoMinutos
